<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (orders.length <= 0) { %>
        <h1>No items selected</h1>
        <% }else{ %>
        <h1>Your orders</h1>
        <ul>
            <% orders.forEach(order =>{  %>
            <li>
                <h1># <%= order.id %> </h1>
                <ul>
                    <% order.products.forEach(product => { %>
                    <li>
                        <%= product.title %> ( <%= product.orderItem.quantity %> )
                    </li>
                    <% })  %>
                </ul>
            </li>
            <% }) %>
        </ul>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>